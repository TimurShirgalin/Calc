<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="srcCompat">@drawable/calc</item>
    </style>

    <style name="Buttons" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/corner_Radius</item>
    </style>

    <style name="ButtonsOther" parent="Buttons">
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>

    <style name="ButtonLandscape" parent="Buttons">
        <item name="android:textSize">@dimen/button_text_land</item>
    </style>

    <style name="ButtonLandscapeOther" parent="ButtonLandscape">
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>

    <style name="ButtonC" parent="Buttons">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="text_View" parent="Theme.MaterialComponents.DayNight">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">13</item>
        <item name="android:textSize">@dimen/textView_textSize</item>
    </style>

    <style name="ButtonSettings" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/button_Set_textSize</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="shapeAppearance">@style/ButtonSettings</item>
        <item name="cornerRadius">@dimen/corner_Radius</item>
    </style>

</resources>