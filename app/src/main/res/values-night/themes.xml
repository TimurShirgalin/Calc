<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="srcCompat">@drawable/calc_dark</item>
    </style>

    <style name="Buttons" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/stroke_Width</item>
        <item name="android:textColor">@color/green</item>
        <item name="cornerRadius">@dimen/corner_Radius</item>
    </style>

    <style name="ButtonLandscape" parent="Buttons">
        <item name="android:textSize">@dimen/button_text_land</item>
    </style>

    <style name="ButtonLandscapeOther" parent="ButtonLandscape">
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>

    <style name="ButtonsOther" parent="Buttons">
        <item name="strokeColor">@color/blue_light</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonC" parent="Buttons">
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="text_View" parent="Theme.MaterialComponents.DayNight">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textView_textSize</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>